{% extends 'base.html.twig' %}

{% block title %}Orders{% endblock %}

{% block body %}
    <h1>Orders</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Product</th>
            <th>Count</th>
            <th>Status</th>
        </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.productId }}</td>
                <td>{{ order.count }}</td>
                {% if order.payment is null %}
                    <td>no paid</td>
                    <td>
                        <a href="{{ path('app_order_paymentredirect', {'id': order.id}) }}">pay</a>
                    </td>
                {% else %}
                    <td>{{ order.payment.status.value }}</td>
                    <td>
                        {% if order.payment.status.value != "refunded" and  order.payment.status.value != "canceled"%}
                            <a href="{{ path('app_payment_edit', {'id': order.payment.id}) }}">refund</a>
                        {% endif %}
                    </td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
